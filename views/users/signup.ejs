<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">SignUp on Wonderlust</h1>
  <div class="col-6 offset-3">
    <form method="post" action="/signup" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label-dark">Username</label>
        <input
          name="username"
          id="username"
          class="form-control"
          type="text"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label-dark">Email</label>
        <input
          name="email"
          id="email"
          class="form-control"
          type="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label-dark">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
