<% layout("layouts/boilerplate") -%>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    
    <h3>Edit your listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label-dark ">Title</label>
            <input name="listing[title]" class="form-control" required value="<%= listing.title%>">
            <div class="valid-feedback">
                Title Looks good!
              </div>
        </div>  
        <div class="mb-3">
            <label for="description" class="form-label-dark ">description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description%></textarea>
            <div class="invalid-feedback">
                Please enter a short description.
              </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label-dark ">Image</label>
            <input name="listing[image]" class="form-control" value="<%= listing.image%>" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label-dark ">Price</label>
                <input name="listing[price]" class="form-control" required value="<%= listing.price%>">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label-dark ">country</label>
                <input name="listing[country]" class="form-control" required value="<%= listing.country%>">
                <div class="invalid-feedback">
                    Country name should be valid.
                  </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label-dark ">location</label>
            <input name="listing[location]" class="form-control" required value="<%= listing.location%>">
            <div class="invalid-feedback">
                Please choose a location.
              </div>
        </div>
        <button class="btn btn-dark mt-3">Edit</button>

    </form>
    </div>
    </div>
    
</body>
